<h1>Today's record</h1>

<div id="msg"></div>
<%= text_field_tag 'date' %>

<%= form_tag 'time_records/batch_create' do %>
    <% for hour in 6..23 %>
        <%= hour %>
        <% for quarter in 1..4 %>
            <% key = hour.to_s+"-"+quarter.to_s %>
            <%= text_field_tag key, @time_records_hash[key] , class: 'record_textfield' %>
        <% end%>
        <br/>
    <% end %>
    <%= hidden_field_tag 'day', Date.today %>
    <%= submit_tag 'Submit' %>
<% end %>

<br/>

<%= link_to 'New Time record', new_time_record_path %>
